{
  "name": "Page Note",
  "description": "Add note on every web page.",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["tabs", "<all_urls>"],
  "background": {"page": "background.html"},
  "icons": {
    "128": "icons/icon_128.png",
    "48": "icons/icon_48.png",
    "16": "icons/icon_16.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "content-scripts/js/page-note.js"
      ],
      "css": [
        "content-scripts/css/page-note.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Page Note",
    "default_icon": {
      "19": "icons/icon_19.png",
      "38": "icons/icon_38.png"
    }
  }
}
